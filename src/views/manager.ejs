        <h1>TÀI KHOẢN NHÂN VIÊN</h1>
        <div id="createStaff">
            <a href="/createstaff.ejs">Tạo mới</a>
        </div>
        <table id="customers">
            <tr>
                <th>Mã TK</th>
                <th>Tên TK</th>
                <th>Mật Khẩu</th>
                <th>Quyền</th>
                <th>Xử Lí</th>
            </tr>
            <% for(var i=0; i< dataUser.length;i++) {%>
                <%if(dataUser[i].quyen=="admin" || dataUser[i].quyen=="nv" ){%>
                    <tr>
                        <td>
                            <%= dataUser[i].ma_tk %>
                        </td>
                        <td>
                            <%= dataUser[i].ten_tk %>
                        </td>
                        <td>
                            <%= dataUser[i].mat_khau %>
                        </td>
                        <td>
                            <%= dataUser[i].quyen %>
                        </td>
                        <td>
                            <a href="/detail/user/'<%= dataUser[i].ten_tk %>'" target="_self">Detail</a>
                            <a href="/update/user/'<%= dataUser[i].ten_tk %>'" target="_self">Update</a>
                            <%if(dataUser[i].quyen !="admin" ){%>
                                <a href="/delete/user/<%= dataUser[i].ten_tk %>/<%= dataUser[i].quyen %>"
                                    target="_self">Remove</a>
                                <%}%>
                        </td>
                    </tr>
                    <% }} %>
        </table><br><br>
